-#instructions.html.haml

.card#instruction
  =form_for :post, url: instructions_path do |f|
    .form-group
      %p.title Заполните ситуацию
    .form-group
      =f.label :instruct_type, "Тип инструкции", :class => "label"
      =f.text_field '', :class => "input text", :id => "instruct_type", :name => "instruct_type"
    .form-group
      =f.label :title, 'Название', :class => 'label'
      =f.text_field "", :class => 'input text', :id => 'title', :name => "title"
    .form-group
      =f.label :text, 'Название', :class => 'label'
      =f.text_area "", :class => 'area text', :id => 'text', :name => "text"
    .form-group
      =f.submit 'Отправить', :class => 'text', :id => 'submit'
